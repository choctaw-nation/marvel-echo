{
	"name": "choctaw-nation/template-theme",
	"description": "a template theme to fork",
	"type": "library",
	"repositories": [
		{
			"type": "composer",
			"url": "https://wpackagist.org",
			"only": [
				"wpackagist-plugin/*",
				"wpackagist-theme/*"
			]
		}
	],
	"scripts": {
		"phpcs": "phpcs wp-content/themes/echo/ --extensions=php --ignore=wp-content/themes/echo/dist/",
		"phpcbf": "phpcbf wp-content/themes/echo/ --extensions=php --ignore=wp-content/themes/echo/dist/"
	},
	"config": {
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"require-dev": {
		"wp-coding-standards/wpcs": "*"
	}
}
